<div class="container">
  <div class="user-form mx-auto">
    <h3 class="text-center pt-2">回答を編集する</h3>
    <div class="card bg-light mt-2 mb-3">
      <div class="card-body">
        <p class="mb-0"><%= @answer.question.user.name %>さんからの質問</p>
        <hr>
        <h5 class="card-title"><b><%= @answer.question.question %></b></h5>
        <p class="card-text text-right">ってロシア語でなんて言うの？</p>
        <hr>
        <p class="mb-0"><%= @answer.question.explanation %></p>
      </div>
    </div>
    <%= form_with(model: @answer, url: {action: "update"}, local: true) do |f| %>
    <div class="form-group">
      <span style="color: #e86060;"><i class="fas fa-edit"></i></span>
      <%= f.label :answer, "質問への回答（ロシア語）" %><br />
      <%= f.text_area :answer, { class: "form-control", 'data-style': 'form-control', required: true, size: "10x5" } %>
    </div>
    <div class="form-group">
      <span style="color: #e86060;"><i class="fas fa-edit"></i></span>
      <%= f.label :explanation, "補足説明" %><br />
      <%= f.text_area :explanation, { class: "form-control", 'data-style': 'form-control', required: true, size: "10x10" } %>
    </div>
    <%= f.submit "変更する", class: "btn btn-primary btn-lg btn-block my-3" %>
    <% end %>
  </div>
</div>

<div class="mx-auto pb-2">
  <%= button_to "回答を削除する", answer_path,
    data: { confirm: "【注意】この操作は取り消せません。本当に質問を削除しますか？" },
    method: :delete, class:"btn btn-danger mx-auto d-block" %>
</div>
