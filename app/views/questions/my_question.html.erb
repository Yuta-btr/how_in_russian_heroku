<%= render "question_tab" %>

<% if @questions.present? %>
<%= render "question_item" %>
<% else %>
<div class="container">
  <div class="question-detail mx-auto py-2">
    <p class="text-center pt-3">投稿した質問はありません。</p>
    <div style="text-align: center">
      <%= image_tag "no_question.svg", width: "70%" %>
    </div>
  </div>
</div>
<% end %>
